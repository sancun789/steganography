<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eee"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.tech_viks.steganoapp.EncryptMessage">

    <TextView
        android:id="@+id/label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/e_key"
        android:layout_alignLeft="@+id/e_key"

        android:layout_marginBottom="246dp"
        android:text="Secret key"
        android:textColor="#000"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/e_key"
        android:layout_width="match_parent"
        android:layout_height="59dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="159dp"
        android:ems="10"
        android:gravity="start"
        android:hint="secret key"
        android:maxHeight="100dip"
        android:maxLength="255"
        android:padding="5dip"
        android:singleLine="false"
        android:textSize="15sp"></EditText>

    <Button
        android:id="@+id/extract"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="25dip"
        android:background="@drawable/sample_shapes"
        android:text="extract"
        android:textColor="#fff"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/error_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/extract"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:singleLine="false"
        android:text=""
        android:textColor="#f91"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="344dp"
        android:layout_height="56dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="0dp"
        android:background="@color/bright_foreground_inverse_material_light"
        android:gravity="center_horizontal"
        android:text="extraction"
        android:textColor="#21487d"
        android:textSize="30dp" />

</RelativeLayout>
