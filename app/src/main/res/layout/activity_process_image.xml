<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="#21487d"
	android:paddingBottom="@dimen/activity_vertical_margin"
	android:paddingLeft="@dimen/activity_horizontal_margin"
	android:paddingRight="@dimen/activity_horizontal_margin"
	android:paddingTop="@dimen/activity_vertical_margin"
	tools:context="com.tech_viks.steganoapp.EncryptMessage">

	<TextView
		android:id="@+id/textView6"
		android:layout_width="344dp"
		android:layout_height="56dp"
		android:layout_alignParentTop="true"
		android:layout_centerHorizontal="true"
		android:layout_marginTop="0dp"
		android:background="@color/bright_foreground_inverse_material_light"
		android:gravity="center_horizontal"
		android:text="TEXT ENCRUPTION"
		android:textColor="#21487d"
		android:textSize="30dp" />

	<TextView
		android:id="@+id/label"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"

		android:layout_alignParentBottom="true"
		android:layout_alignStart="@+id/en_key"
		android:layout_marginBottom="184dp"
		android:text="Secret key"
		android:textColor="#FFF"
		android:textSize="20sp" />

	<EditText
		android:id="@+id/en_key"
		android:layout_width="match_parent"
		android:layout_height="59dp"
		android:layout_alignBottom="@+id/error_message"
		android:layout_centerHorizontal="true"
		android:ems="10"
		android:gravity="start"
		android:hint="secret key"
		android:maxHeight="100dip"
		android:maxLength="255"
		android:padding="5dip"
		android:singleLine="false"
		android:textColorHint="#FFF"
		android:textSize="15sp"></EditText>

	<TextView
		android:id="@+id/label1"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentTop="true"
		android:layout_alignStart="@+id/label"
		android:layout_marginTop="180dp"
		android:text="Message"

		android:textColor="#FFF"
		android:textSize="20sp" />

	<Button
		android:id="@+id/extract"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_alignParentBottom="true"
		android:layout_centerHorizontal="true"
		android:layout_marginBottom="25dip"
		android:background="@drawable/sample_shapes"
		android:text="encrypt"
		android:textColor="#fff"
		android:textSize="18sp" />

	<Button
		android:id="@+id/choose_image_btn"
		android:layout_width="wrap_content"
		android:layout_height="30dp"

		android:layout_alignParentTop="true"
		android:layout_alignStart="@+id/label"
		android:layout_marginTop="107dp"
		android:background="@drawable/sample_shapes"
		android:paddingLeft="20dip"
		android:paddingRight="20dip"
		android:text="Choose Image"
		android:textColor="#fff"
		android:textSize="13sp" />

	<TextView
		android:id="@+id/image_path_textView"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_below="@+id/choose_image_btn"
		android:layout_centerHorizontal="true"
		android:hint="choose a image file.."
		android:padding="5dip"
		android:singleLine="true"
		android:textColorHint="#FFF"
		android:textSize="15sp" />

	<EditText
		android:id="@+id/message_editText"
		android:layout_width="match_parent"
		android:layout_height="100dip"
		android:layout_alignParentTop="true"
		android:layout_centerHorizontal="true"
		android:layout_marginTop="215dp"
		android:ems="10"
		android:gravity="start"
		android:hint="enter message to encrypt (max 255 chars)"
		android:maxHeight="100dip"
		android:maxLength="255"
		android:padding="5dip"
		android:singleLine="false"
		android:textColor="#FFF"
		android:textColorHint="#FFF"
		android:textColorLink="@color/background_material_light"
		android:textSize="15sp"></EditText>

	<TextView
		android:id="@+id/error_message"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_above="@+id/extract"
		android:layout_centerHorizontal="true"
		android:layout_marginBottom="20dp"
		android:gravity="center"
		android:singleLine="false"
		android:text=""
		android:textColor="#f91"
		android:textStyle="italic" />

</RelativeLayout>
